<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

{% head %}
  <title>{{ site.title }}{% if article %}: {{ article.title }}{% else%} - {{ site.subtitle }}{% endif %}</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  {% comment %}
  <!-- Use this RSS link if you are using FeedBurner (recommended) -->
  <link rel="alternate" type="application/rss+xml" title="RSS" href="changeme" />
  {% endcomment %}
  <!-- Include Mephisto's default RSS feed -->
  {{ head.feed }}

  {{ 'prototype' | javascript }}
  {{ 'code_highlighter' | javascript }}
  {{ 'ruby' | javascript }}
  {{ 'application' | stylesheet }}

  {{ 'application' | stylesheet }}
{% endhead %}

<body>
  <div id="container">
    <div id="header">
      <h1><span><a href="/">{{ site.title }}</a></span></h1>
      <h2>{{ site.subtitle }}</h2>
    </div>

    <div id="page">
      <div id="content">
        {{ content_for_layout }}
      </div>

      <div id="sidebar">
        {% include 'sidebar' %}
      </div>

      <br style="clear:both;" />
    </div>

    <div id="footer">
      <hr />
      <p><a href="/">{{ site.title }}</a></p>
      <ul>
        <li>
          powered by <a href="http://mephistoblog.com">Mephisto</a> /
          styled with <a href="http://quotedprintable.com/pages/scribbish">scribbish</a>
        </li>
      </ul>
    </div>
  </div>
</body>
</html>